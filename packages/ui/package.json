{
  "name": "@ppdbultimate/elysium",
  "version": "0.0.1",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "author": "PPDB Ultimate",
  "license": "MIT",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "rimraf dist && tsup --minify && pnpm run copy-css",
    "copy-css": "copyfiles --all --up 1 \"src/**/*.css\" dist",
    "dev": "rimraf dist && tsup --watch --onSuccess \"pnpm run copy-css\"",
    "lint": "eslint . --max-warnings 0",
    "type:check": "tsc --noEmit --incremental false",
    "format:check": "prettier -c .",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "peerDependencies": {
    "@radix-ui/react-popover": "^1.0.7",
    "clsx": "^2.1.0",
    "lucide-react": "^0.303.0",
    "next": "^14.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@elysium/eslint-config": "workspace:*",
    "@elysium/prettier-config": "workspace:*",
    "@elysium/typescript-config": "workspace:*",
    "@radix-ui/react-popover": "^1.0.7",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.38",
    "@types/react-datepicker": "^4.19.5",
    "@types/react-dom": "^18.2.17",
    "clsx": "^2.1.0",
    "copyfiles": "^2.4.1",
    "date-fns": "^3.2.0",
    "eslint": "^8.54.0",
    "lucide-react": "^0.303.0",
    "next": "^14.0.4",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.10",
    "react": "^18.2.0",
    "react-datepicker": "^4.25.0",
    "react-hook-form": "^7.49.3",
    "react-select": "^5.8.0",
    "rimraf": "^5.0.5",
    "tailwind-merge": "^2.2.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "prettier": "@elysium/prettier-config"
}
